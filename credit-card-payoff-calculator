<script>
function fmt(n){return new Intl.NumberFormat(undefined,{style:"currency",currency:"GBP",maximumFractionDigits:2}).format(n)}
function toNum(v){return Number(v)||0}

function simulate(balance,apr,payment){
let r=apr/100/12,totalInterest=0,month=0,rows=[]
while(balance>0&&month<600){
month++
let interest=balance*r
balance+=interest
let pay=Math.min(payment,balance)
balance-=pay
totalInterest+=interest
rows.push({month,pay,interest,balance})
if(payment<=interest) break
}
return{month,totalInterest,rows}
}

function calc(){
let bal=toNum(balance.value)
let aprv=toNum(apr.value)
let min=toNum(minpay.value)
let extra=toNum(extra.value)

let base=simulate(bal,aprv,min)
let faster=simulate(bal,aprv,min+extra)

months.textContent=faster.month
interest.textContent=fmt(faster.totalInterest)
saved.textContent=fmt(base.totalInterest-faster.totalInterest)

table.innerHTML=faster.rows.slice(0,24).map(r=>`
<tr>
<td>${r.month}</td>
<td>${fmt(r.pay)}</td>
<td>${fmt(r.interest)}</td>
<td>${fmt(r.balance)}</td>
</tr>`).join("")
}

function resetVals(){
balance.value=5000;apr.value=19.9;minpay.value=150;extra.value=0;calc()
}

document.getElementById("yr").textContent=new Date().getFullYear()
calc()
</script>
